{
  "manifest_version": 3,

  "name": "yapi2ts",
  "description": "Chrome Extension",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["youURL"],
    "js": ["js/content_script.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["/js/interceptor.js"],
    "matches": ["<all_urls>"]
  }],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}